$root = '.tree-view'

{$root}
	&__items
		padding 5px 0 10px 20px
		list-style none
		margin 0

	&__title
		height 20px
		display flex
		align-items center
		cursor pointer

	&__item-icon
		margin-right 10px
		img
			width 15px
			height 15px

	&__placeholder,
	&__items-count
		padding-left 10px
		font-size 0.8em
		color #cccccc
